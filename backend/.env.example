# Database Configuration
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=spacedly_db
DB_HOST=localhost
DB_DIALECT=postgres

# JWT Secrets (generate strong random strings)
JWT_ACCESS_SECRET=your_access_secret_here_change_in_production
JWT_REFRESH_SECRET=your_refresh_secret_here_change_in_production

# Google OAuth
GOOGLE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:5173

# Security Configuration
# Comma-separated list of allowed origins for CORS (e.g., http://localhost:5173,https://yourdomain.com)
ALLOWED_ORIGINS=http://localhost:5173

# Cookie domain for production (leave empty for development)
# Example: .yourdomain.com (with leading dot for subdomains)
COOKIE_DOMAIN=

# Email Configuration (for OTP)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password

# Cloudinary Configuration (for file uploads and image optimization)
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Server Configuration
PORT=5000
NODE_ENV=development
